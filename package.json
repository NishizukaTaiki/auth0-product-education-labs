{
  "name": "auth0-product-education-labs",
  "version": "1.0.0",
  "description": "A set of tools and example applications for Product Education courses",
  "license": "MIT",
  "author": "Auth0",
  "bugs": {
    "url": "https://github.com/auth0/auth0-product-education-labs/issues"
  },
  "homepage": "https://github.com/auth0/auth0-product-education-labs#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/auth0/auth0-product-education-labs.git"
  },
  "scripts": {
    "init": "concurrently \"npm:init:dependencies\" \"npm:init:environment\"",
    "init:dependencies": "concurrently \"npm:expenses-api:dependencies\" \"npm:expenses-api:secure:dependencies\" \"npm:web-app:dependencies\" \"npm:front-end-web-app:secure:dependencies\" \"npm:front-end-spa-app:dependencies\" \"npm:front-end-spa-app:secure:dependencies\"",
    "init:environment": "",

    "initial-deploy:start": "http-server ./tools/initial-deploy -p $npm_package_config_initial_deploy_port -c-1",

    "expenses-api:start": "npm start --prefix ./apis/expenses-api-unsecured",
    "expenses-api:dependencies": "npm install --prefix ./apis/expenses-api-unsecured",

    "expenses-api:secure:start": "npm start --prefix ./apis/expenses-api-secured",
    "expenses-api:secure:dependencies": "npm install --prefix ./apis/expenses-api-secured",

    "web-app:start": "npm start --prefix ./apps/web-app-unsecured",
    "web-app:dependencies": "npm install --prefix ./apps/web-app-unsecured",

    "front-end-web-app:secure:start": "npm start --prefix ./apps/front-end-web-app-secured",
    "front-end-web-app:secure:dependencies": "npm install --prefix ./apps/front-end-web-app-secured",

    "front-end-spa-app:start": "npm start --prefix ./apps/front-end-spa-app-unsecured",
    "front-end-spa-app:build": "npm run build --prefix ./apps/front-end-spa-app-unsecured --no-content-hash",
    "front-end-spa-app:dependencies": "npm install --prefix ./apps/front-end-spa-app-unsecured",

    "front-end-spa-app:secure:start": "npm start --prefix ./apps/front-end-spa-app-secured",
    "front-end-spa-app:secure:build": "npm run build --prefix ./apps/front-end-spa-app-secured --no-content-hash",
    "front-end-spa-app:secure:dependencies": "npm install --prefix ./apps/front-end-spa-app-secured"
  },
  "config": {
    "initial_deploy_port": 9000
  },
  "keywords": [
    "auth0",
    "vercel",
    "oauth2",
    "openid",
    "oidc",
    "auth",
    "authentication",
    "samples",
    "tools",
    "labs"
  ],
  "dependencies": {
    "concurrently": "^5.3.0",
    "eslint": "^7.11.0",
    "http-server": "^0.12.3"
  }
}
